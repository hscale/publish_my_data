<%#Â This overrides the PMD application layout,
which, in turn is used by the apps to render the data pages. %>

<!DOCTYPE html>
  <%= render 'publish_my_data/shared/open_html' %>
  <%= render 'publish_my_data/shared/head' %>

  <%= content_tag :body, :class=>"errorpage" do %>

    <%= render 'publish_my_data/shared/browser_warning' %>
    <header class="container">
      <nav>
        <%= render 'publish_my_data/shared/logo' %>
        <ol class="breadcrumb">
          <li>
            <a href="#">Error</a>
          </li>
        </ol>
      </nav>
    </header>

    <article>
      <section id="top">
        <%= yield %>
      </section>
      <%= bottom_formats_section "page" %>
    </article>

    <%= render 'publish_my_data/shared/footer', :show_logo => true %>
    <%= render 'publish_my_data/shared/google_analytics' %>

  <% end %>
</html>