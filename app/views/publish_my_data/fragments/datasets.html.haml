#new-fragment.modal-dialog
  .modal-content
    .modal-body
      %a.close(href="#" data-dismiss="modal") &times;
      .step-one
        %h3 Add data
        %h1 Step 1 of 2: Select a Dataset

        = form_tag new_selector_fragment_path(@selector), method: :get, remote: true do
          = select_tag :dataset_uri, grouped_options_for_select(group_datasets_by_theme(@datasets, @themes)), class: 'form-control'
          .submit.primary
            = submit_tag 'Select Dataset', class: 'btn btn-primary', id: 'select-dataset'
            .spinner(style="display: none;")
              = image_tag 'publish_my_data/dclg_stats_selector/spinner.gif'
:javascript
  $.Event('pmd.modal.loaded', {});

  $('#select-dataset').click(function() {
    $('.spinner').show();
  });